@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HistoryOfJapan</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>

<body>
    <h1>Here Is Japan</h1>
    <h2>This is a discovery site for lovers of (mostly)all things Japanese</h2>
    <h3>Welcome!</h3>
    <p>
        Have you been to Japan? Let us know by
        <a href="/City/AddTravelStory">telling your story!</a><br />
        <br />
        To view a list of travel stories, <a href="/City/Index">click here</a><br />
        <br />
        Think you know something about Japan?
        <a href="/Quiz/GeoQuiz">Take a fun quiz here!</a>
        or <a href="/Quiz/BballQuiz">here!</a>

    </p>
    <nav>
        <h3>Culture And History Section:</h3>
        <a href="/Home/Culture">Japanese Culture</a>
        <br />
        <br />
        <a href="/Home/History">Japanese History</a>
        <br />
        <br />

        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <a asp-controller="Account" asp-action="Logout"
               class="btn btn-danger">Logout</a>
        }
    </nav>
</body>
</html>